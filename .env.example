# ===========================================
# SupportAI Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -------------------------------------------
# OpenAI Configuration
# -------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# Models used: gpt-4o-mini (default), gpt-4o (premium), text-embedding-3-small
OPENAI_API_KEY=sk-your_openai_api_key

# -------------------------------------------
# Zendesk OAuth Configuration
# -------------------------------------------
# Create an OAuth client in Zendesk Admin Center
# https://your-subdomain.zendesk.com/admin/apps-integrations/apis/zendesk-api/oauth_clients
ZENDESK_CLIENT_ID=your_zendesk_client_id
ZENDESK_CLIENT_SECRET=your_zendesk_client_secret
ZENDESK_REDIRECT_URI=http://localhost:3000/api/zendesk/oauth/callback

# -------------------------------------------
# Application Settings
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# Error Tracking (Optional - MVP)
# -------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# -------------------------------------------
# Rate Limiting (Optional)
# -------------------------------------------
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000
